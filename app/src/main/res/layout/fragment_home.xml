<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:orientation="vertical"
            android:background="@drawable/framer_background_img">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer App"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_10sdp"
                android:drawableTint="@color/white"
                android:layout_marginTop="@dimen/_15sdp" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/layout_background"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/exp_Incometracker"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            app:cardElevation="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_expenses"
                                    android:layout_marginTop="@dimen/_10sdp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/brown_light"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:gravity="center_horizontal"
                                    android:text="Expenses &amp; Income Tracker" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/crop"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            app:cardElevation="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_crop"
                                    android:layout_marginTop="@dimen/_10sdp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:gravity="center_horizontal"
                                    android:text="Crop"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:textColor="@color/brown_light"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/myfarms"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            app:cardElevation="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_farm"
                                    android:layout_marginTop="@dimen/_10sdp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:gravity="center_horizontal"
                                    android:text="My Farms"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:textColor="@color/brown_light"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/upcomingaction"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            app:cardElevation="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_upcoming"
                                    android:layout_marginTop="@dimen/_10sdp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/brown_light"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:gravity="center_horizontal"
                                    android:text="Upcoming Actions" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/farmstates"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            app:cardElevation="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_states"
                                    android:layout_marginTop="@dimen/_10sdp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/brown_light"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:gravity="center_horizontal"
                                    android:text="Farm States" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/loansubsidies"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            app:cardElevation="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_loans"
                                    android:layout_marginTop="@dimen/_10sdp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/brown_light"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:gravity="center_horizontal"
                                    android:text="Loans &amp; Subsidies Info" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/weather_background"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp">


                            <TextView
                                android:id="@+id/tvnextforecast"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_50sdp"
                                android:text="Next 3 days forecast"
                                android:textColor="@color/white" />


                            <RelativeLayout
                                android:id="@+id/rlweather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/ivweather1"
                                    android:layout_width="@dimen/_54sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="15dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic__weather" />

                                <TextView
                                    android:id="@+id/tv_todayTemp1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/ivweather1"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:text="43°"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_16sdp"
                                    android:textStyle="normal" />


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvnextforecast"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/rlweather"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center">


                                    <TextView
                                        android:id="@+id/tv_day_date1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center"
                                        android:text="MON"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="normal" />

                                    <ImageView
                                        android:id="@+id/ivday1weather"
                                        android:layout_width="@dimen/_32sdp"
                                        android:layout_height="@dimen/_32sdp"
                                        android:layout_below="@id/tv_day_date1"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="15dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic__weather" />

                                    <TextView
                                        android:id="@+id/tv_todayTempday1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/ivday1weather"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center"
                                        android:text="43°"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="normal" />


                                </RelativeLayout>


                                <LinearLayout
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:background="@color/white" />


                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:gravity="center">


                                    <TextView

                                        android:id="@+id/tv_day_date2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center"
                                        android:text="MON"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="normal" />

                                    <ImageView
                                        android:id="@+id/ivtueweatherday2"
                                        android:layout_width="@dimen/_32sdp"
                                        android:layout_height="@dimen/_32sdp"
                                        android:layout_below="@id/tv_day_date2"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="15dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic__weather" />

                                    <TextView
                                        android:id="@+id/tv_temp2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/ivtueweatherday2"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center"
                                        android:text="43°"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="normal" />


                                </RelativeLayout>


                                <LinearLayout
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:background="@color/white" />


                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:gravity="center">


                                    <TextView
                                        android:id="@+id/tv_day_date3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center"
                                        android:text="MON"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="normal" />

                                    <ImageView
                                        android:id="@+id/ivwedweatherday3"
                                        android:layout_width="@dimen/_32sdp"
                                        android:layout_height="@dimen/_32sdp"
                                        android:layout_below="@id/tv_day_date3"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="15dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic__weather" />

                                    <TextView
                                        android:id="@+id/tv_temp3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/ivwedweatherday3"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginEnd="15dp"
                                        android:gravity="center"
                                        android:text="43°"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="normal" />


                                </RelativeLayout>


                            </LinearLayout>


                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="News &amp; Announcements"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tvallnewsannouncement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="See all"
                            android:textColor="@color/green_selected"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                    </RelativeLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvnewsannouncment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/adapter_news_announcements" />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crop Prices"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_14sdp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textColor="@color/green_selected"
                            android:textStyle="normal"
                            android:layout_alignParentEnd="true"
                            android:textSize="@dimen/_14sdp" />


                    </RelativeLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvcropprices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_35sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/adapter_crop_prices" />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>