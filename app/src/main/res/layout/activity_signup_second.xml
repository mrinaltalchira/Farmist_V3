<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bottom_img"
                        android:scaleType="fitXY"
                        android:layout_below="@+id/llform"
                        android:layout_alignParentBottom="true" />

                    <ImageView
                        android:id="@+id/leaf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/leaf"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/back"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp" />

                    <LinearLayout
                        android:id="@+id/llform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/leaf"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/leaf" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Sign up"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Create an account with Farm app and enjoy all the features"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Pincode"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginEnd="@dimen/_1sdp">

                            <EditText
                                android:id="@+id/et_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:padding="@dimen/_12sdp"
                                android:hint="202020"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Village"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginEnd="@dimen/_1sdp">

                            <EditText
                                android:id="@+id/et_mobilenumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="text"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:padding="@dimen/_12sdp"
                                android:hint="amer"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Tehsil"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginEnd="@dimen/_1sdp">

                            <EditText
                                android:id="@+id/et_tehsil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="text"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:padding="@dimen/_12sdp"
                                android:hint="Jaipur"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="normal" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="District"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">

                            <EditText
                                android:id="@+id/et_district"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="text"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:padding="@dimen/_5sdp"
                                android:hint="Rajasthan"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="normal" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Number of acers"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">

                            <EditText
                                android:id="@+id/et_acers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:padding="@dimen/_5sdp"
                                android:hint="203"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="normal" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Preferred Seed Brand"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginEnd="@dimen/_1sdp">

                            <EditText
                                android:id="@+id/et_brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="text"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:padding="@dimen/_12sdp"
                                android:hint="Abc brand"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="normal" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Preferred Chemical Company"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginEnd="@dimen/_1sdp">

                            <EditText
                                android:id="@+id/et_compny"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="text"
                                android:maxLength="50"
                                android:maxLines="1"
                                android:padding="@dimen/_12sdp"
                                android:hint="Xyz Ltd."
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />

                        </androidx.cardview.widget.CardView>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_30sdp">

                            <TextView
                                android:id="@+id/tc_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Back"
                                android:textAllCaps="false"
                                android:textColor="@color/green_selected"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnsignupfinal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:layout_toRightOf="@+id/tc_back"
                                android:backgroundTint="@color/green_selected"
                                android:background="@drawable/login_btn_background"
                                android:padding="@dimen/_5sdp"
                                android:text="Sign up"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />


                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>


            </ScrollView>


        </LinearLayout>

    </RelativeLayout>
</layout>